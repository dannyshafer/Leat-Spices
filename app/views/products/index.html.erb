<div class="jumbotron hardcore" style="padding-top: -10">
  <div class="container">
    <h1>Welcome to the Spice Islands</h1>
    <button class="btn ghost squared btn-lg btn-warning"><span style="color: white;">Sign up</span></button>
    <button class="btn squared btn-lg btn-primary">Baller</button>
  </div>
</div>
<h2>Products</h2>

<% @products.each do |category, products| %>
<h3><%= category.name %></h3>
<ul>
  <% products.each do |product| %>
  <li>
    <h4><%= link_to product.name, product_path(product.permalink) %></h4>
    <p><%= product.short_description %></p>
    <p><b>Price:</b> <%= number_to_currency product.price %></p>
  </li>
  <% end %>
</ul>
<% end %>